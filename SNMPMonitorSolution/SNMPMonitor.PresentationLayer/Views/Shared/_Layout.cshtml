<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SNMPMonitor</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="navbar navbar-static-top navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="navbar-brand">
                    <img src="~/Content/img/LogoSNMPMonitorWhite.png" style="width:60px" alt="SNMP Monitor" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                    <li>@Html.ActionLink("Monitor", "Monitor", "Home")</li>
                    <li>@Html.ActionLink("Logs", "Logs", "Home")</li>
                    <li>
                        <button type="button" class="btn btn-success navbar-btn btn-sm" onclick="location.href='@Url.Action("AddAgent", "Home")'">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dominik Heeb, Fabian Keller, Etienne Georgy</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/js")
    @RenderSection("scripts", required: false)
    <script>


    </script>
</body>
</html>
